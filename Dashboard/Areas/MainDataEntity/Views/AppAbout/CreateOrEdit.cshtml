                                            </div>
                                        </div>

                                        <div class="col-md-4 col-12">
                                            <div class="mb-1">
                                                <label asp-for="YoutubeUrl" class="form-label"></label>
                                                <input asp-for="YoutubeUrl" class="form-control" placeholder="@Localizer.Get("Enter") @(Localizer.Get("YoutubeUrl"))" />
                                                <span asp-validation-for="YoutubeUrl" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <hr />
                                        <div class="col-12">
                                            <button type="submit" class="btn btn-primary me-1">@Localizer.Get("Submit")</button>
                                            <button type="reset" class="btn btn-outline-secondary me-1">@Localizer.Get("Reset")</button>
                                            <a asp-action="Details" class="btn btn-warning"> @Localizer.Get("Back") </a>

                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>


    </div>
</div>
