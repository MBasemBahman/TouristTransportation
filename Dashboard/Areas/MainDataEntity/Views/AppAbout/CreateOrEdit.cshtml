@section scripts{
    <script>
        $(document).ready(function () {
            $('.summernote-dark').each(function () {
                var elem_id = $(this).attr('id');
                $(this).summernote({
                    tabsize: 2,
                    height: 120,
                    toolbar: [
                        ['style', ['style']],
                        ['font', ['bold', 'underline', 'clear']],
                        ['color', ['color']],
                        ['para', ['ul', 'ol', 'paragraph']],
                        ['table', ['table']],
                        ['insert', ['link', 'picture', 'video']],
                    ],
                    callbacks: {
                        onChange: function (e) {
                            setTimeout(function () {
                                $("#" + elem_id + "InDark").summernote('code', $("#" + elem_id).val());
                            }, 200);
                        }
                    }
                });
            });

        });
    </script>
}